{
  "_version": "1.58.0",
  "sap.app": {
    "id": "DokkanProject",
    "type": "application",
    "title": "Dokkan Project",  
    "description": "Una aplicación SAPUI5 para la información de personajes del videojuego de móvil 'Dokkan Battle'",
    "dataSources": {
      "odataService": {
        "uri": "/odata/Caracteres/",
        "type": "OData",
        "settings": {
          "odataVersion": "4.0",
          "localUri": ""
        }
      }
    }
  },
  "sap.ui5": {
    "dependencies": {
      "libs": {
        "sap.ui.core": {},
        "sap.m": {},
        "sap.ui.layout": {},
        "sap.f": {}
      }
    },
    "rootView": {
      "viewName": "DokkanProject.view.Inicio", 
      "type": "XML",
      "async": true,
      "id": "Inicio"
    },
    "routing": {
      "config": {
        "routerClass": "sap.m.routing.Router",
        "viewType": "XML",
        "async": true,
        "viewPath": "DokkanProject.view",
        "controlId": "Inicio",
        "controlAggregation": "pages",
        "transition": "slide"
      },
      "routes": [
        {
          "pattern": "inicio",
          "name": "Inicio",
          "target": "Inicio"
        },

        {
          "pattern": "news",
          "name": "News",
          "target": "News"
        },
        {
          "pattern": "news-details",
          "name": "News-Details",
          "target": "News-Details"
        },

        {
          "pattern": "summons",
          "name": "Summons",
          "target": "Summons"
        },

        {
          "pattern": "characters",
          "name": "Characters",
          "target": "Characters"
        },
        {
          "pattern": "characters-details",
          "name": "Characters-Details",
          "target": "Characters-Details"
        }
      ],
      "targets": {
        "Inicio": {
          "viewType": "XML",
          "transition": "slide",
          "viewName": "Inicio",
          "controlId": "Inicio",
          "controlAggregation": "pages",
          "viewId": "Inicio",
          "viewLevel": 1
        },

        "News": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "controlAggregation": "pages",
          "viewName": "newsViews/News",
          "viewId": "News",
          "viewLevel": 2
        },
        "News-Details": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "controlAggregation": "pages",
          "viewName": "newsViews/News-Details",
          "viewId": "News-Details",
          "viewLevel": 3
        },


        "Summons": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "controlAggregation": "pages",
          "viewName": "summonsViews/Summons",
          "viewId": "Summons",
          "viewLevel": 2
        },

        "Characters": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "controlAggregation": "pages",
          "viewName": "charactersViews/Characters",
          "viewId": "Characters",
          "viewLevel": 2
        },
        "Characters-Details": {
          "viewType": "XML",
          "transition": "slide",
          "clearControlAggregation": false,
          "controlAggregation": "pages",
          "viewName": "charactersViews/Characters-Details",
          "viewId": "Characters-Details",
          "viewLevel": 3
        }
      }
    }
  }
}
