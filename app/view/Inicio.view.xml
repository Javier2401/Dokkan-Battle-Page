<mvc:View
    controllerName="DokkanProject.controller.Inicio"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:u="sap.ui.unified"
>
    <App id="Inicio">

        <Page 
            showHeader="false"
            class="fondoWeb" 
        >
            <HBox 
                alignItems="Center"    
                class="fondoImagenInicio"
                width="100%" 
            >
                <Image 
                    src="../images/titulo.png"
                    height="120px"
                    width="200px"
                    class="imagenInicio"
                />

                <VBox class="fondoTituloInicio" width="100%" alignItems="Center">
                    <Text text="DRAGON BALL Z DOKKAN BATTLE INFO PAGE" textAlign="Center" class="tituloInicio" />
                </VBox>
            </HBox>

            <HBox 
                justifyContent="Center"  
                alignItems="Center"    
                class="fondoBotonesInicio"  
            >
                <Button id="botonNews" text="NEWS" class="botonesInicio" press="onCambiarPantalla1" />

                <MenuButton text="CHARACTERS" class="botonesInicio">
                    <Menu>
                        <MenuItem id="botonName" text="Name"/>
                        <MenuItem text="Rarities">
                            <items>
                                <MenuItem id="botonEZA" text="EZA's"/>
                                <MenuItem id="botonLR" text="LR"/>
                                <MenuItem id="botonUR" text="UR"/>
                                <MenuItem id="botonSSR" text="SSR"/>
                                <MenuItem id="botonSR" text="SR"/>
                                <MenuItem id="botonR" text="R"/>
                                <MenuItem id="botonN" text="N"/>
                            </items>
                        </MenuItem>
                        <MenuItem text="Types">
                            <items>
                                <MenuItem id="botonAGL" text="AGL"/>
                                <MenuItem id="botonSTR" text="STR"/>
                                <MenuItem id="botonTEQ" text="TEQ"/>
                                <MenuItem id="botonPHY" text="PHY"/>
                                <MenuItem id="botonINT" text="INT"/>
                            </items>
                        </MenuItem>
                        <MenuItem text="Classes">
                            <items>
                                <MenuItem text="Super Class">
                                    <items>
                                        <MenuItem id="botonSuperAGL" text="SUPER AGL"/>
                                        <MenuItem id="botonSuperSTR" text="SUPER STR"/>
                                        <MenuItem id="botonSuperTEQ" text="SUPER TEQ"/>
                                        <MenuItem id="botonSuperPHY" text="SUPER PHY"/>
                                        <MenuItem id="botonSuperINT" text="SUPER INT"/>
                                    </items>
                                </MenuItem>
                                <MenuItem text="Extreme Class">
                                    <items>
                                        <MenuItem id="botonExtremeAGL" text="EXTREME AGL"/>
                                        <MenuItem id="botonExtremeSTR" text="EXTREME STR"/>
                                        <MenuItem id="botonExtremeTEQ" text="EXTREME TEQ"/>
                                        <MenuItem id="botonExtremePHY" text="EXTREME PHY"/>
                                        <MenuItem id="botonExtremeINT" text="EXTREME INT"/>
                                    </items>
                                </MenuItem>
                            </items>
                        </MenuItem>    
                        <MenuItem text="Categories"/>
                    </Menu>
                </MenuButton>

                <MenuButton text="EVENTS" class="botonesInicio">
                    <Menu>
                        <MenuItem id="botonEventosI" text="Events I" />
                        <MenuItem id="botonEventosII" text="Events II" />
                        <MenuItem id="botonEventosIII" text="Events III" />
                    </Menu>
                </MenuButton>

                <Button text="SUMMONS" id="botonSummons" class="botonesInicio" press="onCambiarPantalla2"/>

                <MenuButton text="ITEMS" class="botonesInicio">
                    <Menu>
                        <MenuItem text="Awakening Medals">
                            <items>
                                <MenuItem id="botonAwakeningI" text ="Awakening Medals I"/>
                                <MenuItem id="botonAwakeningII" text ="Awakening Medals II"/>
                            </items>
                        </MenuItem>
                        <MenuItem text="Support">
                            <items>
                                <MenuItem id="botonSupportItems" text ="Items"/>
                                <MenuItem id="botonMemories" text ="Memories"/>
                            </items>
                        </MenuItem>
                        <MenuItem text="Training">
                            <items>
                                <MenuItem id="botonTrainingItems" text ="Items"/>
                                <MenuItem id="botonTrainingLocation" text ="Location"/>
                            </items>
                        </MenuItem>
                        <MenuItem text="Orbs">
                            <items>
                                <MenuItem id="botonPotencialOrbs" text ="Potencial Orbs"/>
                                <MenuItem id="botonSkillOrbs" text ="Skill Orbs"/>
                                <MenuItem id="botonLinkSkillOrbs" text ="Link Skill Orbs"/>
                            </items>
                        </MenuItem>
                    </Menu>
                </MenuButton>
            </HBox>


            <VBox 
                class="fondoPersonajesInicio" 
                alignItems="Center" 
            >
                <Text text="Upcoming Cards" textAlign="Center" class="tituloPersonajesInicio" />
                <HBox 
                    alignItems="Center" 
                    justifyContent="Center" 
                    class="fondoPersonajesInicio"
                >
                    <Image 
                        src="https://dokkan.art/assets/thumb/card_4029480_thumb.webp" 
                        class="personajesInicio personajeRojo"
                    />

                    <Image 
                        src="https://dokkan.art/assets/thumb/card_1029440_thumb.webp" 
                        class="personajesInicio personajeVerde"
                    />

                    <Image 
                        src="https://dokkan.art/assets/thumb/card_1029620_thumb.webp" 
                        class="personajesInicio personajeVerde"
                    />
                </HBox>
            </VBox>
            
        </Page>

    </App>
</mvc:View>
