<mvc:View
    controllerName="DokkanProject.controller.newsController.News"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:u="sap.ui.unified"
>

    <App id="News">
        <Page
            showHeader="false"
            class="backgroundWeb"
            showNavButton="true"
        >
            <FlexBox
                class="backgroundHeaders"
                alignContent="Center"
                justifyContent="Center"
                alignItems="Center"
            >   
                <Text text="News" class="titleHeaders"/>
            </FlexBox>


            <HBox 
                alignItems="Center" 
                justifyContent="Center" 
                wrap="Wrap"
                class = "backgroundInfoNews"
            >
                <VBox 
                    class = "infoNewsWrapper"
                >
                    <Image 
                        src = "https://dokkaninfo.com/assets/japan/ingame/news/news_banner_adventure_36_2_small.png"
                        class = "imageInfoNews"
                        press = "onCambiarPantallaNewsDetails"
                    />

                    <Text text = "NEW AREA 36" class = "mainTextNews" textAlign="Center"/>
                    <Text text = "Bardock can be dokkan awaken into Super Saiyan" class ="secondaryTextNews"/>
                    <Text text = "09/10/2024 - 10:00 - CEST" class = "dateText" textAlign="Center"/>
                </VBox>
                
                <VBox 
                    class = "infoNewsWrapper"
                >
                    <Image 
                        src = "https://dokkaninfo.com/assets/japan/ingame/missions/mission_banner_event_zbattle_004.png"
                        class = "imageInfoNews"
                    />

                    <Text text = "FRIEZA SUPER EZA" class = "mainTextNews" textAlign="Center"/>
                    <Text text = "Aim to boost the passive of Frieza (Full Power) through Super Eza" class ="secondaryTextNews"/>
                    <Text text = "09/10/2024 - 10:00 - CEST" class = "dateText" textAlign="Center"/>
                </VBox>
            
                <VBox 
                    class = "infoNewsWrapper"
                >
                    <Image 
                        src = "https://dokkaninfo.com/assets/japan/ingame/news/news_banner_event_zbattle_112_small.png"
                        class = "imageInfoNews"
                    />

                    <Text text = "2 NEW SUB EZAS" class = "mainTextNews" textAlign="Center"/>
                    <Text text = "Aim to Sub EZA Nail and Goku Super Saiyan" class ="secondaryTextNews"/>
                    <Text text = "09/10/2024 - 10:00 - CEST" class = "dateText" textAlign="Center"/>
                </VBox>
            
            </HBox>

        </Page>
    </App>

</mvc:View>
