<mvc:View
    controllerName="DokkanProject.controller.News"
    xmlns:cssgrid="sap.ui.layout.cssgrid"
    xmlns:f="sap.f"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:tnt="sap.tnt"
    xmlns:u="sap.ui.unified"
>

    <App id="News">
        <Page
            showHeader="false"
            class="backgroundWeb"
        >
            <FlexBox
                class="backgroundHeaders"
                alignContent="Center"
                justifyContent="Center"
                alignItems="Center"
            >   
                <Text text="News" class="titleHeaders"/>
            </FlexBox>


            <HBox 
                alignItems="Center" 
                justifyContent="Center" 
                wrap="Wrap"
                class = "backgroundInfoNews"
            >
                <VBox 
                    class = "infoNewsWrapper"
                >
                    <Image 
                        src = "https://dokkaninfo.com/assets/japan/ingame/missions/mission_banner_event_zbattle_004.png"
                        class = "imageInfoNews"
                        press = "onCambiarPantallaNewsDetails"
                    />

                    <Text text = "FRIEZA SUPER EZA" class = "mainTextNews" textAlign="Center"/>
                    <Text text = "Amo la carita de Alicia Tortosa Municio la quiero con locura" class ="secondaryTextNews"/>
                    <Text text = "09/10/2024 - 10:00 - CEST" class = "dateText" textAlign="Center"/>
                </VBox>
                
                <VBox 
                    class = "infoNewsWrapper"
                >
                    <Image 
                        src = "https://dokkaninfo.com/assets/japan/ingame/missions/mission_banner_event_zbattle_004.png"
                        class = "imageInfoNews"
                    />

                    <Text text = "FRIEZA SUPER EZA" class = "mainTextNews" textAlign="Center"/>
                    <Text text = "Amo la carita de Alicia Tortosa Municio la quiero con locura" class ="secondaryTextNews"/>
                    <Text text = "09/10/2024 - 10:00 - CEST" class = "dateText" textAlign="Center"/>
                </VBox>
            
                <VBox 
                    class = "infoNewsWrapper"
                >
                    <Image 
                        src = "https://dokkaninfo.com/assets/japan/ingame/missions/mission_banner_event_zbattle_004.png"
                        class = "imageInfoNews"
                    />

                    <Text text = "FRIEZA SUPER EZA" class = "mainTextNews" textAlign="Center"/>
                    <Text text = "Amo la carita de Alicia Tortosa Municio la quiero con locura" class ="secondaryTextNews"/>
                    <Text text = "09/10/2024 - 10:00 - CEST" class = "dateText" textAlign="Center"/>
                </VBox>
            
            </HBox>

        </Page>
    </App>

</mvc:View>
